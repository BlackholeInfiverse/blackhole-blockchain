# BlackHole Bridge Configuration
# Copy this file to .env and modify as needed

# Server Configuration
PORT=8084

# Blockchain RPC Endpoints
ETHEREUM_RPC=wss://eth-mainnet.alchemyapi.io/v2/demo
SOLANA_RPC=wss://api.mainnet-beta.solana.com
BLACKHOLE_RPC=ws://localhost:8545

# Database Configuration
DATABASE_PATH=./data/bridge.db

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=./logs/bridge.log
ENABLE_COLORED_LOGS=true

# Security Features
REPLAY_PROTECTION_ENABLED=true
CIRCUIT_BREAKER_ENABLED=true

# Retry Configuration
MAX_RETRIES=3
RETRY_DELAY_MS=5000
BATCH_SIZE=100

# Documentation
ENABLE_DOCUMENTATION=true
