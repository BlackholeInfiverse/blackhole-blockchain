# Solana Devnet Configuration
# Copy this file to .env and fill in your values

# Solana RPC endpoint (using public devnet by default)
SOLANA_RPC_URL=https://api.devnet.solana.com

# Wallet private key (base58 encoded)
# Generate with: solana-keygen new --outfile wallet.json
# Then get private key with: solana-keygen pubkey wallet.json
SOLANA_PRIVATE_KEY=your_base58_private_key_here

# Token mint settings
TOKEN_NAME=BlackHole Bridge Token
TOKEN_SYMBOL=BHBT
TOKEN_DECIMALS=9
INITIAL_SUPPLY=1000000

# Test transaction settings
TEST_RECIPIENT_ADDRESS=your_recipient_address_here
TEST_AMOUNT=1000000000  # 1 token in smallest units (9 decimals)
