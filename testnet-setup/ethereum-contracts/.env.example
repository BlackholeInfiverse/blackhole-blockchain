# Ethereum Sepolia Configuration
# Copy this file to .env and fill in your values

# Private key for deployment (without 0x prefix)
# Get from MetaMask: Account Details > Export Private Key
PRIVATE_KEY=your_private_key_here

# Sepolia RPC URL (optional, using public RPC by default)
# Get free API key from Infura or Alchemy
SEPOLIA_RPC_URL=https://ethereum-sepolia-rpc.publicnode.com

# Etherscan API key for contract verification (optional)
# Get from https://etherscan.io/apis
ETHERSCAN_API_KEY=your_etherscan_api_key_here

# Bridge operator addresses (comma-separated)
BRIDGE_OPERATORS=0x1234567890123456789012345678901234567890

# Test transaction settings
TEST_RECIPIENT_ADDRESS=0x1234567890123456789012345678901234567890
TEST_AMOUNT=1000000000000000000  # 1 token in wei (18 decimals)
